<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pinkbackground"
    android:weightSum="10"
    tools:context=".ShortsCategory">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">


    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pinkShort"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/pinkshorts"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/pinkText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_tag_pink_short"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/pinkShort"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/pinkText"
                    android:weightSum="3">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="-"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="+"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearLayout1"
                    android:layout_centerHorizontal="true"
                    android:text="Buy"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/blueJean"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/girlshortt"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/jeanText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_tag_pink_short"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/blueJean"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/jeanText"
                    android:text="Buy"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/boxerShort"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/girlshorty"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/boxerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_tag_pink_short"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/boxerShort"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/boxerText"
                    android:text="Buy"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/fineShort"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/shorts"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/fineText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_tag_pink_short"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/fineShort"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fineText"
                    android:layout_centerHorizontal="true"
                    android:text="Buy"
                    android:textSize="15sp"
                    android:textColor="#000"
                    />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>
</LinearLayout>